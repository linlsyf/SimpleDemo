<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.common.mapper.LogMapper">
    <resultMap id="BaseResultMap" type="com.common.ExceptionLog">
        <result column="ID" property="id" />
        <result column="title" property="title" />
        <result column="content" property="content"  jdbcType="BLOB"  typeHandler="org.apache.ibatis.type.BlobTypeHandler"/>

    </resultMap>

    <select id="get" resultMap="BaseResultMap" parameterType="java.lang.String" >
        select  ID,TITLE
               from ERROR_LOG
          WHERE  ID=#{id}
    </select>
    <insert id="save" parameterType="com.common.ExceptionLog">
        insert into ERROR_LOG(id,title, content, createtime)
        values(#{id}, #{title}, #{content,typeHandler=org.apache.ibatis.type.BlobTypeHandler}, #{createtime})
    </insert>

</mapper>