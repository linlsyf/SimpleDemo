<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.common.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.common.LoginUser">
        <result column="ID" property="id" />
        <result column="title" property="title" />
        <result column="name" property="name" />
        <result column="content" property="content"  jdbcType="BLOB"  typeHandler="org.apache.ibatis.type.BlobTypeHandler"/>

    </resultMap>

    <select id="get" resultMap="BaseResultMap" parameterType="com.common.LoginUser" >
        select  id,name  from user  where id  in ( SELECT  userid  FROM USER_AUTHS   where
        loginId= #{loginId} and pwd=#{pwd}
            )
    </select>
    <insert id="save" parameterType="com.common.LoginUser">
        insert into ERROR_LOG(id,title, content, createtime)
        values(#{id}, #{title}, #{content,typeHandler=org.apache.ibatis.type.BlobTypeHandler}, #{createtime})
    </insert>

</mapper>